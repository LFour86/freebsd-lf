<?xml version="1.0" ?>
<labwc_config>
  <keyboard>
    <default />

    <!-- Desktop -->
    	<keybind key="W-Return">
    	</keybind>

    	<keybind key="W-x">
      		<action name="Close" />
    	</keybind>

    	<keybind key="W-m">
      		<action name="Iconify" />
    	</keybind>

    	<!-- Show Windows -->
    	<keybind key="W-a">
      		<action name="Execute"><command
                >~/.config/labwc/scripts/show-windows</command></action>
    	</keybind>

    	<!-- Show Desktop -->
    	<keybind key="W-c">
      		<action name="Execute"><command>~/.config/labwc/scripts/show-desktop</command></action>
    	</keybind>

        <!-- Lock Desktop -->
    	<keybind key="W-S-l">
      		<action name="Execute"><command>~/.config/labwc/scripts/lock</command></action>
        </keybind>

        <!-- ScreenShot -->
        <keybind key="W-Print">
       	<action name="Execute">
            <command>sh -c "grim -g \"$(slurp)\" ~/Pictures/ScreenShot/screenshot-$(date +%Y%m%d-%H%M%S).png"</command>
        </action>
        </keybind>

        <!-- Decrease Brightness -->
        <keybind key="XF86Tools">
          <action name="Execute">
            <command>~/.config/labwc/scripts/brightness-down</command>
          </action>
        </keybind>

        <!-- Increase Brightness -->
        <keybind key="XF86AudioStop">
          <action name="Execute">
            <command>~/.config/labwc/scripts/brightness-up</command>
          </action>
        </keybind>

    <!-- Applications -->
    	<keybind key="W-z">
      		<action name="Execute"><command>kitty</command></action>
    	</keybind>

    	<keybind key="W-space">
      		<action name="Execute"><command>fuzzel</command></action>
    	</keybind>

        <keybind key="W-b">
      		<action name="Execute"><command
                >chrome --ozone-platform=x11 %U</command></action>
    	</keybind>

    <!-- Workspaces -->
	<!-- Change Workspace -->
    	<keybind key="W-1">
      		<action name="GoToDesktop" to="1" />
    	</keybind>
    	<keybind key="W-2">
      		<action name="GoToDesktop" to="2" />
    	</keybind>
    	<keybind key="W-3">
      		<action name="GoToDesktop" to="3" />
    	</keybind>
    	<keybind key="W-4">
      		<action name="GoToDesktop" to="4" />
    	</keybind>
    	<keybind key="W-5">
      		<action name="GoToDesktop" to="5" />
    	</keybind>
    	<keybind key="W-6">
      		<action name="GoToDesktop" to="6" />
    	</keybind>
    	<keybind key="W-7">
      		<action name="GoToDesktop" to="7" />
    	</keybind>
    	<keybind key="W-8">
      		<action name="GoToDesktop" to="8" />
    	</keybind>
    	<keybind key="W-9">
      		<action name="GoToDesktop" to="9" />
    	</keybind>
    		<keybind key="W-0">
      	<action name="GoToDesktop" to="10" />
    	</keybind>

	<!-- Move Windows -->
    	<keybind key="W-S-1"><action
                name="SendToDesktop"
                to="1"
                follow="false"
            /></keybind>
    	<keybind key="W-S-2"><action
                name="SendToDesktop"
                to="2"
                follow="false"
            /></keybind>
    	<keybind key="W-S-3"><action
                name="SendToDesktop"
                to="3"
                follow="false"
            /></keybind>
    	<keybind key="W-S-4"><action
                name="SendToDesktop"
                to="4"
                follow="false"
            /></keybind>
    	<keybind key="W-S-5"><action
                name="SendToDesktop"
                to="5"
                follow="false"
            /></keybind>
    	<keybind key="W-S-6"><action
                name="SendToDesktop"
                to="6"
                follow="false"
            /></keybind>
    	<keybind key="W-S-7"><action
                name="SendToDesktop"
                to="7"
                follow="false"
            /></keybind>
    	<keybind key="W-S-8"><action
                name="SendToDesktop"
                to="8"
                follow="false"
            /></keybind>
    	<keybind key="W-S-9"><action
                name="SendToDesktop"
                to="9"
                follow="false"
            /></keybind>
    	<keybind key="W-S-0"><action
                name="SendToDesktop"
                to="10"
                follow="false"
            /></keybind>

    	<!-- Cycle Through Workspaces -->
    	<keybind key="W-S-Left">
      		<action name="GoToDesktop" to="left-occupied" />
    	</keybind>
    	<keybind key="W-S-Right">
      		<action name="GoToDesktop" to="right-occupied" />
    	</keybind>
    	<keybind key="W-l">
      		<action name="GoToDesktop" to="right" wrap="yes" />
    	</keybind>

  </keyboard>

  <!-- Desktops (Workspaces) -->
  <desktops number="10">
    <names>
      <name>1</name>
      <name>2</name>
      <name>3</name>
      <name>4</name>
      <name>5</name>
      <name>6</name>
      <name>7</name>
      <name>8</name>
      <name>9</name>
      <name>10</name>
    </names>
  </desktops>

  <!-- Mouse -->
  <mouse>
    <default />
    <context name="Root">
      <mousebind button="Left" action="Press" />
      <mousebind button="Left" action="Click" />
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="root-menu" />
      </mousebind>
    </context>
  </mouse>

  <!-- Theme -->
  <theme>
    <name>Adwaita-Labwc-dark</name>
    <cornerRadius>16</cornerRadius>
    <font place="ActiveWindow">
	<name>Maple Mono NF CN</name>
        <size>10</size>
      <slant>normal</slant>
      <weight>normal</weight>
    </font>
  </theme>
</labwc_config>
